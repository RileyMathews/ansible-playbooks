server {
    listen 80{% if accept_tcp_proxy %} proxy_protocol{% endif %};
    server_name {{ listen_host }};

    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl{% if accept_tcp_proxy %} proxy_protocol{% endif %};
    http2 on;
    server_name {{ listen_host }};

    # Path to SSL certificate and private key generated by Certbot
    ssl_certificate /etc/letsencrypt/live/{{ listen_host }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ listen_host }}/privkey.pem;

    # Enable SSL protocols and configurations
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers HIGH:!aNULL:!MD5;

    limit_req zone=one burst=200 nodelay;

    # WebSocket and HTTP proxy configuration
    location / {
        proxy_pass {{ backend_host }};
        proxy_ssl_verify off;

        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Additional headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts for WebSocket connections
        proxy_read_timeout 60m;
        proxy_send_timeout 60m;
    }
}
